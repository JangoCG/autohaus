      <!-- Marquee Car Cards -->
      <div data-controller="marquee" data-marquee-speed-value="0.5" data-marquee-pause-on-hover-value="true" class="relative">
        <!-- Fade edges -->
        <div class="absolute left-0 top-0 bottom-0 w-32 bg-gradient-to-r from-white to-transparent z-10 pointer-events-none"></div>
        <div class="absolute right-0 top-0 bottom-0 w-32 bg-gradient-to-l from-white to-transparent z-10 pointer-events-none"></div>

        <div data-marquee-target="track" class="flex gap-6 py-4">
          <% @featured_vehicles.each do |vehicle| %>
            <div class="flex-shrink-0 w-80">
              <%= render "pages/vehicle_card", vehicle: vehicle %>
            </div>
          <% end %>
        </div>
      </div>
    <% else %>
      <div class="mx-auto max-w-7xl px-6 lg:px-8">
        <p class="text-center text-gray-500">Derzeit keine Fahrzeuge verfugbar.</p>
      </div>
    <% end %>

