                      <option class="bg-gray-900 text-white">10.000 EUR</option>
                      <option class="bg-gray-900 text-white">20.000 EUR</option>
                      <option class="bg-gray-900 text-white">30.000 EUR</option>
                      <option class="bg-gray-900 text-white">50.000 EUR</option>
                      <option class="bg-gray-900 text-white">100.000 EUR</option>
