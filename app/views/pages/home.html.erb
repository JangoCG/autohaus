<div class="bg-gray-900">
  <%= render "shared/navbar" %>

  <!-- Hero Section -->
  <section class="relative">
    <div class="relative h-[600px] lg:h-[700px] bg-gray-900 overflow-hidden">
      <%= image_tag "hero-suv.png", class: "absolute inset-0 w-full h-full object-cover", alt: "Premium Fahrzeuge" %>

      <!-- Overlay gradient for text readability -->
      <div class="absolute inset-0 bg-gradient-to-t from-gray-900 via-gray-900/50 to-transparent"></div>

      <!-- Hero content -->
      <div class="relative h-full flex items-end">
        <div class="mx-auto max-w-7xl px-6 pb-24 lg:px-8 w-full">
          <div class="bg-white/5 backdrop-blur-xl rounded-2xl p-8 shadow-2xl border border-white/10 relative overflow-hidden">
            <!-- Decorative blur glow -->
            <div class="absolute -top-10 -right-10 w-32 h-32 bg-sky-500/20 rounded-full blur-3xl pointer-events-none"></div>
            <div class="absolute -bottom-10 -left-10 w-32 h-32 bg-blue-600/20 rounded-full blur-3xl pointer-events-none"></div>

            <div class="relative">
              <div class="flex items-center gap-3 mb-6">
                 <!-- Icon & Title -->
                 <div class="p-2 bg-sky-500/10 rounded-lg">
                    <svg class="h-6 w-6 text-sky-400" fill="none" viewBox="0 0 24 24" stroke-width="2" stroke="currentColor">
                      <path stroke-linecap="round" stroke-linejoin="round" d="m21 21-5.197-5.197m0 0A7.5 7.5 0 1 0 5.196 5.196a7.5 7.5 0 0 0 10.607 10.607Z" />
                    </svg>
                 </div>
                 <h2 class="text-xl font-bold text-white tracking-tight">Fahrzeug finden</h2>
              </div>

              <div class="grid grid-cols-1 md:grid-cols-2 lg:grid-cols-4 gap-4">
                <!-- Marke -->
                <div class="group">
                  <label for="marke" class="block text-xs font-medium text-gray-400 uppercase tracking-wider mb-1.5 ml-1">Marke</label>
                  <div class="relative">
                    <select id="marke" name="marke" class="block w-full rounded-xl bg-black/20 border border-white/10 py-3.5 px-4 text-white placeholder-gray-400 focus:border-sky-500 focus:ring-1 focus:ring-sky-500 focus:outline-none focus:bg-black/30 transition-all appearance-none cursor-pointer">
                      <option value="" class="bg-gray-900 text-white">Alle Marken</option>
                      <option class="bg-gray-900 text-white">BMW</option>
                      <option class="bg-gray-900 text-white">Audi</option>
                      <option class="bg-gray-900 text-white">Mercedes-Benz</option>
                      <option class="bg-gray-900 text-white">Volkswagen</option>
                      <option class="bg-gray-900 text-white">Porsche</option>
                    </select>
                    <div class="pointer-events-none absolute inset-y-0 right-0 flex items-center px-4 text-gray-400">
                      <svg class="h-4 w-4" fill="none" viewBox="0 0 24 24" stroke-width="2" stroke="currentColor"><path stroke-linecap="round" stroke-linejoin="round" d="m19.5 8.25-7.5 7.5-7.5-7.5" /></svg>
                    </div>
                  </div>
                </div>

                <!-- Modell -->
                <div class="group">
                  <label for="modell" class="block text-xs font-medium text-gray-400 uppercase tracking-wider mb-1.5 ml-1">Modell</label>
                  <div class="relative">
                    <select id="modell" name="modell" class="block w-full rounded-xl bg-black/20 border border-white/10 py-3.5 px-4 text-white placeholder-gray-400 focus:border-sky-500 focus:ring-1 focus:ring-sky-500 focus:outline-none focus:bg-black/30 transition-all appearance-none cursor-pointer">
                      <option value="" class="bg-gray-900 text-white">Alle Modelle</option>
                    </select>
                    <div class="pointer-events-none absolute inset-y-0 right-0 flex items-center px-4 text-gray-400">
                      <svg class="h-4 w-4" fill="none" viewBox="0 0 24 24" stroke-width="2" stroke="currentColor"><path stroke-linecap="round" stroke-linejoin="round" d="m19.5 8.25-7.5 7.5-7.5-7.5" /></svg>
                    </div>
                  </div>
                </div>

                <!-- Preis -->
                <div class="group">
                  <label for="preis" class="block text-xs font-medium text-gray-400 uppercase tracking-wider mb-1.5 ml-1">Preis bis</label>
                  <div class="relative">
                    <select id="preis" name="preis" class="block w-full rounded-xl bg-black/20 border border-white/10 py-3.5 px-4 text-white placeholder-gray-400 focus:border-sky-500 focus:ring-1 focus:ring-sky-500 focus:outline-none focus:bg-black/30 transition-all appearance-none cursor-pointer">
