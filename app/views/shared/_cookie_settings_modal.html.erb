<div
  data-cookie-settings-target="modal"
  data-action="click->cookie-settings#closeOnBackdrop keydown@window->cookie-settings#closeOnEscape"
  class="fixed inset-0 z-50 hidden flex items-center justify-center p-4 bg-black/60 backdrop-blur-sm"
>
  <div class="relative w-full max-w-2xl max-h-[90vh] overflow-y-auto rounded-2xl bg-white shadow-2xl" @click.stop>
    <!-- Header -->
    <div class="sticky top-0 z-10 flex items-center justify-between border-b border-gray-200 bg-white px-6 py-4">
      <h2 class="text-xl font-semibold tracking-tight text-gray-900">
        Datenschutzeinstellungen
      </h2>
      <button type="button" data-action="cookie-settings#close" class="rounded-full p-2 text-gray-400 transition hover:bg-gray-100 hover:text-gray-600">
        <svg class="h-5 w-5" fill="none" stroke="currentColor" viewBox="0 0 24 24">
          <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M6 18L18 6M6 6l12 12" />
        </svg>
      </button>
    </div>

    <!-- Content -->
    <div class="px-6 py-5">
      <p class="text-sm text-gray-600">
        Diese Website nutzt Cookies und ahnliche Technologien.
        Sie konnen Ihre Einstellungen jederzeit anpassen.
      </p>

      <div class="mt-6 space-y-4">
        <!-- Technisch erforderlich -->
        <div class="rounded-xl border border-gray-200 bg-gray-50 p-4">
          <div class="flex items-start justify-between gap-4">
            <div class="flex-1">
              <h3 class="font-semibold text-gray-900">Technisch erforderlich</h3>
              <p class="mt-1 text-sm text-gray-600">
                Erforderliche Cookies fur den Betrieb der Website.
              </p>
            </div>
            <span class="inline-flex items-center rounded-full bg-sky-100 px-2.5 py-0.5 text-xs font-medium text-sky-800">
              Immer aktiv
            </span>
          </div>
        </div>

        <!-- Cal.com -->
        <div class="rounded-xl border border-gray-200 p-4">
          <div class="flex items-start justify-between gap-4">
            <div class="flex-1">
              <h3 class="font-semibold text-gray-900">Cal.com Terminbuchung</h3>
              <p class="mt-1 text-sm text-gray-600">
                Fur die Online-Terminbuchung. Daten werden an Cal.com (USA) ubertragen.
              </p>
            </div>
            <label class="relative inline-flex cursor-pointer items-center">
              <input type="checkbox" data-cookie-settings-target="calcomToggle" class="peer sr-only">
              <div class="peer h-6 w-11 rounded-full bg-gray-200 after:absolute after:left-[2px] after:top-[2px] after:h-5 after:w-5 after:rounded-full after:border after:border-gray-300 after:bg-white after:transition-all peer-checked:bg-sky-500 peer-checked:after:translate-x-full peer-checked:after:border-white"></div>
            </label>
          </div>
        </div>
      </div>

      <!-- Cookie-Tabelle -->
      <div class="mt-6">
        <h3 class="mb-3 font-semibold text-gray-900">Cookie-Details</h3>
        <div class="overflow-hidden rounded-xl border border-gray-200">
          <table class="min-w-full divide-y divide-gray-200">
            <thead class="bg-gray-50">
              <tr>
                <th class="px-4 py-3 text-left text-xs font-medium uppercase text-gray-500">Cookie</th>
                <th class="px-4 py-3 text-left text-xs font-medium uppercase text-gray-500">Beschreibung</th>
                <th class="px-4 py-3 text-left text-xs font-medium uppercase text-gray-500">Typ</th>
              </tr>
            </thead>
            <tbody class="divide-y divide-gray-200 bg-white">
              <tr>
                <% session_cookie_name = "_#{Rails.application.class.module_parent_name.underscore}_session" %>
                <td class="whitespace-nowrap px-4 py-3 text-sm font-mono text-gray-900"><%= session_cookie_name %></td>
                <td class="px-4 py-3 text-sm text-gray-600">Session-Cookie fur den Betrieb der Website.</td>
                <td class="px-4 py-3">
                  <span class="inline-flex rounded-full bg-gray-100 px-2 py-0.5 text-xs font-medium text-gray-600">Erforderlich</span>
                </td>
              </tr>
              <tr>
                <td class="whitespace-nowrap px-4 py-3 text-sm font-mono text-gray-900">consent_calcom</td>
                <td class="px-4 py-3 text-sm text-gray-600">Speichert Ihre Einwilligung fur Cal.com (1 Jahr).</td>
                <td class="px-4 py-3">
                  <span class="inline-flex rounded-full bg-sky-100 px-2 py-0.5 text-xs font-medium text-sky-700">Optional</span>
                </td>
              </tr>
            </tbody>
          </table>
        </div>
      </div>

      <p class="mt-4 text-xs text-gray-500">
        Weitere Informationen: <%= link_to "Datenschutzerklarung", datenschutz_path, class: "underline hover:text-gray-700" %>.
      </p>
    </div>

    <!-- Footer buttons -->
    <div class="sticky bottom-0 flex flex-col gap-3 border-t border-gray-200 bg-gray-50 px-6 py-4 sm:flex-row sm:justify-end">
      <button type="button" data-action="cookie-settings#save" class="inline-flex w-full items-center justify-center rounded-full border border-gray-300 bg-white px-5 py-2.5 text-sm font-semibold text-gray-700 hover:bg-gray-50 sm:w-auto">
        Auswahl speichern
      </button>
      <button type="button" data-action="cookie-settings#acceptAll" class="inline-flex w-full items-center justify-center rounded-full bg-gradient-to-r from-sky-500 to-blue-600 px-5 py-2.5 text-sm font-semibold text-white shadow-lg shadow-sky-500/20 hover:from-sky-400 hover:to-blue-500 sm:w-auto">
        Alle akzeptieren
      </button>
    </div>
  </div>
</div>
