          <div class="relative overflow-hidden rounded-2xl bg-gray-100 aspect-[4/3] ring-1 ring-gray-900/10">
            <%= image_tag "theme_gardening_booking.png",
                          class: "w-full h-full object-cover object-top transition duration-300 group-hover:scale-105",
                          alt: "Gartenpflege Buchung" %>
