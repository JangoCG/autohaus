<div class="group bg-white rounded-2xl shadow-lg ring-1 ring-gray-200 overflow-hidden hover:shadow-xl transition-shadow">
  <div class="aspect-[4/3] relative overflow-hidden bg-gray-100">
    <%= image_tag vehicle.image, class: "w-full h-full object-cover group-hover:scale-105 transition-transform duration-300", alt: vehicle.full_name %>
    <span class="absolute top-3 left-3 bg-<%= vehicle.badge_color %> text-white text-xs font-medium px-2.5 py-1 rounded"><%= vehicle.badge %></span>
    <button class="absolute top-3 right-3 p-2 bg-white/80 rounded-full hover:bg-white transition-colors">
      <svg class="h-5 w-5 text-gray-600 hover:text-red-500" fill="none" viewBox="0 0 24 24" stroke-width="1.5" stroke="currentColor">
        <path stroke-linecap="round" stroke-linejoin="round" d="M21 8.25c0-2.485-2.099-4.5-4.688-4.5-1.935 0-3.597 1.126-4.312 2.733-.715-1.607-2.377-2.733-4.313-2.733C5.1 3.75 3 5.765 3 8.25c0 7.22 9 12 9 12s9-4.78 9-12Z" />
      </svg>
    </button>
  </div>
  <div class="p-5">
    <h3 class="text-lg font-semibold text-gray-900"><%= vehicle.full_name %></h3>
    <p class="text-sm text-gray-500 mt-1 line-clamp-1"><%= vehicle.variant %></p>
    <div class="mt-4 flex flex-wrap gap-3 text-xs text-gray-600">
      <span class="flex items-center gap-1">
        <svg class="h-4 w-4" fill="none" viewBox="0 0 24 24" stroke-width="1.5" stroke="currentColor">
          <path stroke-linecap="round" stroke-linejoin="round" d="M3.75 13.5l10.5-11.25L12 10.5h8.25L9.75 21.75 12 13.5H3.75z" />
        </svg>
        <%= vehicle.formatted_power %>
      </span>
      <span class="flex items-center gap-1">
        <svg class="h-4 w-4" fill="none" viewBox="0 0 24 24" stroke-width="1.5" stroke="currentColor">
          <path stroke-linecap="round" stroke-linejoin="round" d="M12 3v2.25m6.364.386l-1.591 1.591M21 12h-2.25m-.386 6.364l-1.591-1.591M12 18.75V21m-4.773-4.227l-1.591 1.591M5.25 12H3m4.227-4.773L5.636 5.636M15.75 12a3.75 3.75 0 11-7.5 0 3.75 3.75 0 017.5 0z" />
        </svg>
        <%= vehicle.fuel_type %>
      </span>
    </div>
    <div class="mt-2 flex flex-wrap gap-3 text-xs text-gray-600">
      <span><%= vehicle.transmission %></span>
      <span><%= vehicle.year %></span>
      <span><%= vehicle.formatted_mileage %></span>
    </div>
    <div class="mt-5 pt-4 border-t border-gray-100">
      <div class="flex items-center justify-between">
        <div>
          <a href="#" class="text-sky-500 text-sm font-medium hover:text-sky-600"><%= vehicle.formatted_monthly_rate %></a>
          <p class="text-xs text-gray-500">FINANZIEREN</p>
        </div>
        <div class="text-right">
          <p class="text-xl font-bold text-gray-900"><%= vehicle.formatted_price %></p>
          <p class="text-xs text-gray-500"><%= vehicle.vat_reclaimable ? 'MwSt. ausweisbar' : 'MwSt. nicht ausweisbar' %></p>
        </div>
      </div>
    </div>
  </div>
</div>
