<div class="bg-gray-900">
  <%= render "shared/navbar" %>

  <!-- Hero Section -->
  <section class="relative">
    <div class="relative h-[600px] lg:h-[700px] bg-gray-900 overflow-hidden">
      <%= image_tag "hero-suv.png", class: "absolute inset-0 w-full h-full object-cover", alt: "Premium Fahrzeuge" %>

      <!-- Overlay gradient for text readability -->
      <div class="absolute inset-0 bg-gradient-to-t from-gray-900 via-gray-900/50 to-transparent"></div>

      <!-- Hero content -->
      <div class="relative h-full flex items-end">
        <div class="mx-auto max-w-7xl px-6 pb-24 lg:px-8 w-full">
          <!-- Search/Filter Bar -->
          <div class="bg-gray-800/90 backdrop-blur-sm rounded-xl p-6 shadow-2xl ring-1 ring-white/10">
            <div class="flex items-center gap-4 mb-4">
              <svg class="h-6 w-6 text-sky-400" fill="none" viewBox="0 0 24 24" stroke-width="1.5" stroke="currentColor">
                <path stroke-linecap="round" stroke-linejoin="round" d="m21 21-5.197-5.197m0 0A7.5 7.5 0 1 0 5.196 5.196a7.5 7.5 0 0 0 10.607 10.607Z" />
              </svg>
              <span class="text-white font-semibold">Schnellsuche</span>
            </div>
            <div class="grid grid-cols-1 sm:grid-cols-2 lg:grid-cols-4 gap-4">
              <div>
                <label for="marke" class="sr-only">Marke</label>
                <select id="marke" name="marke" class="block w-full rounded-md bg-gray-700 border-0 py-3 px-4 text-white ring-1 ring-inset ring-gray-600 focus:ring-2 focus:ring-sky-500">
                  <option value="">Alle Marken</option>
                  <option>BMW</option>
                  <option>Audi</option>
                  <option>Mercedes-Benz</option>
                  <option>Volkswagen</option>
                  <option>Porsche</option>
                </select>
              </div>
              <div>
                <label for="modell" class="sr-only">Modell</label>
                <select id="modell" name="modell" class="block w-full rounded-md bg-gray-700 border-0 py-3 px-4 text-white ring-1 ring-inset ring-gray-600 focus:ring-2 focus:ring-sky-500">
                  <option value="">Alle Modelle</option>
                </select>
              </div>
              <div>
                <label for="preis" class="sr-only">Preis bis</label>
                <select id="preis" name="preis" class="block w-full rounded-md bg-gray-700 border-0 py-3 px-4 text-white ring-1 ring-inset ring-gray-600 focus:ring-2 focus:ring-sky-500">
                  <option value="">Preis bis</option>
                  <option>10.000 EUR</option>
                  <option>20.000 EUR</option>
                  <option>30.000 EUR</option>
                  <option>50.000 EUR</option>
                  <option>100.000 EUR</option>
                </select>
              </div>
              <div>
                <button type="button" class="w-full rounded-md bg-sky-500 px-4 py-3 text-sm font-semibold text-white shadow-sm hover:bg-sky-400 focus-visible:outline focus-visible:outline-2 focus-visible:outline-offset-2 focus-visible:outline-sky-500 transition-colors">
                  30 Treffer anzeigen
                </button>
              </div>
            </div>
          </div>
        </div>
      </div>
    </div>
  </section>

  <!-- Aktuelle Angebote (Featured Cars) Section -->
  <section id="fahrzeuge" class="bg-white py-24 sm:py-32">
    <div class="mx-auto max-w-7xl px-6 lg:px-8">
      <div class="mx-auto max-w-2xl lg:mx-0 mb-16">
        <h2 class="text-4xl font-semibold tracking-tight text-gray-900 sm:text-5xl">Aktuelle Angebote</h2>
        <p class="mt-4 text-lg text-gray-600">Entdecken Sie unsere handverlesene Auswahl an Qualitatsfahrzeugen.</p>
      </div>

      <!-- Car Cards Grid -->
      <div class="grid grid-cols-1 sm:grid-cols-2 lg:grid-cols-4 gap-6">
        <!-- Car Card 1: BMW X3 -->
        <div class="group bg-white rounded-2xl shadow-lg ring-1 ring-gray-200 overflow-hidden hover:shadow-xl transition-shadow">
          <div class="aspect-[4/3] relative overflow-hidden bg-gray-100">
            <%= image_tag "car-bmw-x3.png", class: "w-full h-full object-cover group-hover:scale-105 transition-transform duration-500", alt: "BMW X3" %>
            <!-- Tag -->
            <span class="absolute top-3 left-3 bg-gray-900 text-white text-xs font-medium px-2.5 py-1 rounded">GEBRAUCHTWAGEN</span>
          </div>
          <div class="p-5">
            <h3 class="text-lg font-semibold text-gray-900">BMW X3</h3>
            <p class="text-sm text-gray-500 mt-1 line-clamp-1">xDrive 20d M-Sportpaket LED Navi</p>

            <!-- Specs -->
            <div class="mt-4 flex flex-wrap gap-3 text-xs text-gray-600">
              <span class="flex items-center gap-1">
                <svg class="h-4 w-4" fill="none" viewBox="0 0 24 24" stroke-width="1.5" stroke="currentColor">
                  <path stroke-linecap="round" stroke-linejoin="round" d="M3.75 13.5l10.5-11.25L12 10.5h8.25L9.75 21.75 12 13.5H3.75z" />
                </svg>
                140 kW (190 PS)
              </span>
              <span class="flex items-center gap-1">
                <svg class="h-4 w-4" fill="none" viewBox="0 0 24 24" stroke-width="1.5" stroke="currentColor">
                  <path stroke-linecap="round" stroke-linejoin="round" d="M12 3v2.25m6.364.386l-1.591 1.591M21 12h-2.25m-.386 6.364l-1.591-1.591M12 18.75V21m-4.773-4.227l-1.591 1.591M5.25 12H3m4.227-4.773L5.636 5.636M15.75 12a3.75 3.75 0 11-7.5 0 3.75 3.75 0 017.5 0z" />
                </svg>
                Diesel
              </span>
            </div>
            <div class="mt-2 flex flex-wrap gap-3 text-xs text-gray-600">
              <span>Automatik</span>
              <span>09/2018</span>
              <span>67.105 km</span>
            </div>

            <!-- Price -->
            <div class="mt-5 pt-4 border-t border-gray-100">
              <div class="flex items-center justify-between">
                <div>
                  <a href="#" class="text-sky-500 text-sm font-medium hover:text-sky-600">ab 480 EUR/mtl.</a>
                  <p class="text-xs text-gray-500">FINANZIEREN</p>
                </div>
                <div class="text-right">
                  <p class="text-xl font-bold text-gray-900">31.980,- EUR</p>
                  <p class="text-xs text-gray-500">MwSt. nicht ausweisbar</p>
                </div>
              </div>
            </div>
          </div>
        </div>

        <!-- Car Card 2: Renault Twingo -->
        <div class="group bg-white rounded-2xl shadow-lg ring-1 ring-gray-200 overflow-hidden hover:shadow-xl transition-shadow">
          <div class="aspect-[4/3] relative overflow-hidden bg-gray-100">
            <%= image_tag "car-renault-twingo.png", class: "w-full h-full object-cover group-hover:scale-105 transition-transform duration-500", alt: "Renault Twingo" %>
            <span class="absolute top-3 left-3 bg-gray-900 text-white text-xs font-medium px-2.5 py-1 rounded">GEBRAUCHTWAGEN</span>
          </div>
          <div class="p-5">
            <h3 class="text-lg font-semibold text-gray-900">Renault Twingo</h3>
            <p class="text-sm text-gray-500 mt-1 line-clamp-1">Expression Klima Bluetooth ZV</p>

            <div class="mt-4 flex flex-wrap gap-3 text-xs text-gray-600">
              <span class="flex items-center gap-1">
                <svg class="h-4 w-4" fill="none" viewBox="0 0 24 24" stroke-width="1.5" stroke="currentColor">
                  <path stroke-linecap="round" stroke-linejoin="round" d="M3.75 13.5l10.5-11.25L12 10.5h8.25L9.75 21.75 12 13.5H3.75z" />
                </svg>
                52 kW (71 PS)
              </span>
              <span class="flex items-center gap-1">
                <svg class="h-4 w-4" fill="none" viewBox="0 0 24 24" stroke-width="1.5" stroke="currentColor">
                  <path stroke-linecap="round" stroke-linejoin="round" d="M12 3v2.25m6.364.386l-1.591 1.591M21 12h-2.25m-.386 6.364l-1.591-1.591M12 18.75V21m-4.773-4.227l-1.591 1.591M5.25 12H3m4.227-4.773L5.636 5.636M15.75 12a3.75 3.75 0 11-7.5 0 3.75 3.75 0 017.5 0z" />
                </svg>
                Benzin
              </span>
            </div>
            <div class="mt-2 flex flex-wrap gap-3 text-xs text-gray-600">
              <span>Schaltgetriebe</span>
              <span>08/2019</span>
              <span>19.630 km</span>
            </div>

            <div class="mt-5 pt-4 border-t border-gray-100">
              <div class="flex items-center justify-between">
                <div>
                  <a href="#" class="text-sky-500 text-sm font-medium hover:text-sky-600">ab 130 EUR/mtl.</a>
                  <p class="text-xs text-gray-500">FINANZIEREN</p>
                </div>
                <div class="text-right">
                  <p class="text-xl font-bold text-gray-900">8.680,- EUR</p>
                  <p class="text-xs text-gray-500">MwSt. nicht ausweisbar</p>
                </div>
              </div>
            </div>
          </div>
        </div>

        <!-- Car Card 3: Audi A1 -->
        <div class="group bg-white rounded-2xl shadow-lg ring-1 ring-gray-200 overflow-hidden hover:shadow-xl transition-shadow">
          <div class="aspect-[4/3] relative overflow-hidden bg-gray-100">
            <%= image_tag "car-audi-a1.png", class: "w-full h-full object-cover group-hover:scale-105 transition-transform duration-500", alt: "Audi A1" %>
            <span class="absolute top-3 left-3 bg-gray-900 text-white text-xs font-medium px-2.5 py-1 rounded">GEBRAUCHTWAGEN</span>
          </div>
          <div class="p-5">
            <h3 class="text-lg font-semibold text-gray-900">Audi A1</h3>
            <p class="text-sm text-gray-500 mt-1 line-clamp-1">Sportback 30 TFSI S-tronic S-Line</p>

            <div class="mt-4 flex flex-wrap gap-3 text-xs text-gray-600">
              <span class="flex items-center gap-1">
                <svg class="h-4 w-4" fill="none" viewBox="0 0 24 24" stroke-width="1.5" stroke="currentColor">
                  <path stroke-linecap="round" stroke-linejoin="round" d="M3.75 13.5l10.5-11.25L12 10.5h8.25L9.75 21.75 12 13.5H3.75z" />
                </svg>
                85 kW (116 PS)
              </span>
              <span class="flex items-center gap-1">
                <svg class="h-4 w-4" fill="none" viewBox="0 0 24 24" stroke-width="1.5" stroke="currentColor">
                  <path stroke-linecap="round" stroke-linejoin="round" d="M12 3v2.25m6.364.386l-1.591 1.591M21 12h-2.25m-.386 6.364l-1.591-1.591M12 18.75V21m-4.773-4.227l-1.591 1.591M5.25 12H3m4.227-4.773L5.636 5.636M15.75 12a3.75 3.75 0 11-7.5 0 3.75 3.75 0 017.5 0z" />
                </svg>
                Benzin
              </span>
            </div>
            <div class="mt-2 flex flex-wrap gap-3 text-xs text-gray-600">
              <span>Automatik</span>
              <span>09/2020</span>
              <span>89.205 km</span>
            </div>

            <div class="mt-5 pt-4 border-t border-gray-100">
              <div class="flex items-center justify-between">
                <div>
                  <a href="#" class="text-sky-500 text-sm font-medium hover:text-sky-600">ab 298 EUR/mtl.</a>
                  <p class="text-xs text-gray-500">FINANZIEREN</p>
                </div>
                <div class="text-right">
                  <p class="text-xl font-bold text-gray-900">19.880,- EUR</p>
                  <p class="text-xs text-gray-500">MwSt. nicht ausweisbar</p>
                </div>
              </div>
            </div>
          </div>
        </div>

        <!-- Car Card 4: Skoda Fabia -->
        <div class="group bg-white rounded-2xl shadow-lg ring-1 ring-gray-200 overflow-hidden hover:shadow-xl transition-shadow">
          <div class="aspect-[4/3] relative overflow-hidden bg-gray-100">
            <%= image_tag "car-skoda-fabia.png", class: "w-full h-full object-cover group-hover:scale-105 transition-transform duration-500", alt: "Skoda Fabia" %>
            <span class="absolute top-3 left-3 bg-gray-900 text-white text-xs font-medium px-2.5 py-1 rounded">GEBRAUCHTWAGEN</span>
          </div>
          <div class="p-5">
            <h3 class="text-lg font-semibold text-gray-900">Skoda Fabia</h3>
            <p class="text-sm text-gray-500 mt-1 line-clamp-1">Combi Style Plus TSI DSG</p>

            <div class="mt-4 flex flex-wrap gap-3 text-xs text-gray-600">
              <span class="flex items-center gap-1">
                <svg class="h-4 w-4" fill="none" viewBox="0 0 24 24" stroke-width="1.5" stroke="currentColor">
                  <path stroke-linecap="round" stroke-linejoin="round" d="M3.75 13.5l10.5-11.25L12 10.5h8.25L9.75 21.75 12 13.5H3.75z" />
                </svg>
                44 kW (60 PS)
              </span>
              <span class="flex items-center gap-1">
                <svg class="h-4 w-4" fill="none" viewBox="0 0 24 24" stroke-width="1.5" stroke="currentColor">
                  <path stroke-linecap="round" stroke-linejoin="round" d="M12 3v2.25m6.364.386l-1.591 1.591M21 12h-2.25m-.386 6.364l-1.591-1.591M12 18.75V21m-4.773-4.227l-1.591 1.591M5.25 12H3m4.227-4.773L5.636 5.636M15.75 12a3.75 3.75 0 11-7.5 0 3.75 3.75 0 017.5 0z" />
                </svg>
                Benzin
              </span>
            </div>
            <div class="mt-2 flex flex-wrap gap-3 text-xs text-gray-600">
              <span>Schaltgetriebe</span>
              <span>05/2017</span>
              <span>75.545 km</span>
            </div>

            <div class="mt-5 pt-4 border-t border-gray-100">
              <div class="flex items-center justify-between">
                <div>
                  <a href="#" class="text-sky-500 text-sm font-medium hover:text-sky-600">ab 142 EUR/mtl.</a>
                  <p class="text-xs text-gray-500">FINANZIEREN</p>
                </div>
                <div class="text-right">
                  <p class="text-xl font-bold text-gray-900">9.480,- EUR</p>
                  <p class="text-xs text-gray-500">MwSt. nicht ausweisbar</p>
                </div>
              </div>
            </div>
          </div>
        </div>
      </div>

      <!-- View All Button -->
      <div class="mt-12 text-center">
        <a href="#" class="inline-flex items-center gap-2 rounded-md bg-gray-900 px-6 py-3 text-sm font-semibold text-white shadow-sm hover:bg-gray-700 transition-colors">
          Alle Fahrzeuge anzeigen
          <svg class="h-4 w-4" fill="none" viewBox="0 0 24 24" stroke-width="2" stroke="currentColor">
            <path stroke-linecap="round" stroke-linejoin="round" d="M13.5 4.5L21 12m0 0l-7.5 7.5M21 12H3" />
          </svg>
        </a>
      </div>
    </div>
  </section>

  <!-- About/Mission Section -->
  <section class="bg-gray-900 py-24 sm:py-32">
    <div class="mx-auto max-w-7xl px-6 lg:px-8">
      <div class="grid grid-cols-1 lg:grid-cols-2 gap-12 lg:gap-16 items-center">
        <!-- Image -->
        <div class="relative">
          <div class="aspect-[4/3] rounded-2xl overflow-hidden ring-1 ring-white/10 relative">
            <%= image_tag "about-sports-car-night.png", class: "w-full h-full object-cover", alt: "GoAuftrag Mission" %>
            <div class="absolute inset-0 bg-gradient-to-tr from-sky-500/20 via-transparent to-orange-500/10"></div>
          </div>
        </div>

        <!-- Content -->
        <div>
          <p class="text-base/7 font-semibold text-sky-400"><span class="text-sky-400">Go</span>Auftrag</p>
          <h2 class="mt-2 text-4xl font-semibold tracking-tight text-white sm:text-5xl">
            Hochste Kundenzufriedenheit ist unser Unternehmensziel
          </h2>
          <p class="mt-6 text-lg/8 text-gray-300">
            Unser Anspruch ist es, Sie kompetent und serviceorientiert bei Ihrem Autokauf zu unterstutzen. Die Leidenschaft zu unseren Autos, eine professionelle Abwicklung und unsere Qualitat zeichnen uns hierbei aus.
          </p>
          <p class="mt-4 text-lg/8 text-gray-300">
            Wir nehmen uns Zeit fur Sie und bieten Ihnen einen umfangreichen rundum Service. Neben unserem vielfaltigem Angebot in jeder Preisklasse erwartet Sie in unserem Haus ein individueller Service.
          </p>
          <div class="mt-8">
            <a href="#kontakt" class="inline-flex items-center gap-2 text-sky-400 font-semibold hover:text-sky-300 transition-colors">
              Mehr erfahren
              <svg class="h-4 w-4" fill="none" viewBox="0 0 24 24" stroke-width="2" stroke="currentColor">
                <path stroke-linecap="round" stroke-linejoin="round" d="M13.5 4.5L21 12m0 0l-7.5 7.5M21 12H3" />
              </svg>
            </a>
          </div>
        </div>
      </div>
    </div>
  </section>

  <!-- Unsere Leistungen (Services) Section -->
  <section id="leistungen" class="bg-gray-50 py-24 sm:py-32">
    <div class="mx-auto max-w-7xl px-6 lg:px-8">
      <div class="mx-auto max-w-2xl text-center mb-16">
        <h2 class="text-base/7 font-semibold text-sky-600">Unsere Leistungen</h2>
        <p class="mt-2 text-4xl font-semibold tracking-tight text-gray-900 sm:text-5xl">
          Alles rund ums Auto
        </p>
        <p class="mt-6 text-lg/8 text-gray-600">
          Von der Beratung bis zur Zulassung - wir bieten Ihnen einen Rundum-Service fur Ihr Fahrzeug.
        </p>
      </div>

      <!-- Services Grid -->
      <div class="grid grid-cols-1 md:grid-cols-2 gap-8 max-w-4xl mx-auto">
        <!-- Autokauf -->
        <div class="bg-white rounded-2xl p-8 shadow-sm ring-1 ring-gray-200 hover:shadow-lg transition-shadow">
          <div class="flex items-start gap-4">
            <div class="flex-shrink-0">
              <div class="flex h-12 w-12 items-center justify-center rounded-lg bg-sky-100">
                <svg class="h-6 w-6 text-sky-600" fill="none" viewBox="0 0 24 24" stroke-width="1.5" stroke="currentColor">
                  <path stroke-linecap="round" stroke-linejoin="round" d="M2.25 18.75a60.07 60.07 0 0 1 15.797 2.101c.727.198 1.453-.342 1.453-1.096V18.75M3.75 4.5v.75A.75.75 0 0 1 3 6h-.75m0 0v-.375c0-.621.504-1.125 1.125-1.125H20.25M2.25 6v9m18-10.5v.75c0 .414.336.75.75.75h.75m-1.5-1.5h.375c.621 0 1.125.504 1.125 1.125v9.75c0 .621-.504 1.125-1.125 1.125h-.375m1.5-1.5H21a.75.75 0 0 0-.75.75v.75m0 0H3.75m0 0h-.375a1.125 1.125 0 0 1-1.125-1.125V15m1.5 1.5v-.75A.75.75 0 0 0 3 15h-.75M15 10.5a3 3 0 1 1-6 0 3 3 0 0 1 6 0Zm3 0h.008v.008H18V10.5Zm-12 0h.008v.008H6V10.5Z" />
                </svg>
              </div>
            </div>
            <div>
              <h3 class="text-lg font-semibold text-gray-900">Autokauf</h3>
              <p class="mt-2 text-gray-600">
                Sie suchen einen Neuwagen oder einen Jahreswagen? Sie interessieren sich fur einen guten Gebrauchtwagen? In allen Fallen sind wir der richtige Ansprechpartner fur Sie!
              </p>
              <a href="#" class="mt-4 inline-flex items-center gap-1 text-sky-600 font-medium hover:text-sky-500 transition-colors">
                Mehr erfahren
                <svg class="h-4 w-4" fill="none" viewBox="0 0 24 24" stroke-width="2" stroke="currentColor">
                  <path stroke-linecap="round" stroke-linejoin="round" d="M13.5 4.5L21 12m0 0l-7.5 7.5M21 12H3" />
                </svg>
              </a>
            </div>
          </div>
        </div>

        <!-- Autoverkauf -->
        <div class="bg-white rounded-2xl p-8 shadow-sm ring-1 ring-gray-200 hover:shadow-lg transition-shadow">
          <div class="flex items-start gap-4">
            <div class="flex-shrink-0">
              <div class="flex h-12 w-12 items-center justify-center rounded-lg bg-sky-100">
                <svg class="h-6 w-6 text-sky-600" fill="none" viewBox="0 0 24 24" stroke-width="1.5" stroke="currentColor">
                  <path stroke-linecap="round" stroke-linejoin="round" d="M12 6v12m-3-2.818.879.659c1.171.879 3.07.879 4.242 0 1.172-.879 1.172-2.303 0-3.182C13.536 12.219 12.768 12 12 12c-.725 0-1.45-.22-2.003-.659-1.106-.879-1.106-2.303 0-3.182s2.9-.879 4.006 0l.415.33M21 12a9 9 0 1 1-18 0 9 9 0 0 1 18 0Z" />
                </svg>
              </div>
            </div>
            <div>
              <h3 class="text-lg font-semibold text-gray-900">Autoverkauf</h3>
              <p class="mt-2 text-gray-600">
                Der Verkauf eines Fahrzeugs ist mit einem erheblichen Aufwand verbunden und kostet Zeit. Sparen Sie sich den Stress und sprechen Sie uns noch heute auf Ihren geplanten Verkauf an!
              </p>
              <a href="#" class="mt-4 inline-flex items-center gap-1 text-sky-600 font-medium hover:text-sky-500 transition-colors">
                Mehr erfahren
                <svg class="h-4 w-4" fill="none" viewBox="0 0 24 24" stroke-width="2" stroke="currentColor">
                  <path stroke-linecap="round" stroke-linejoin="round" d="M13.5 4.5L21 12m0 0l-7.5 7.5M21 12H3" />
                </svg>
              </a>
            </div>
          </div>
        </div>

        <!-- An-/Abmeldung -->
        <div class="bg-white rounded-2xl p-8 shadow-sm ring-1 ring-gray-200 hover:shadow-lg transition-shadow">
          <div class="flex items-start gap-4">
            <div class="flex-shrink-0">
              <div class="flex h-12 w-12 items-center justify-center rounded-lg bg-sky-100">
                <svg class="h-6 w-6 text-sky-600" fill="none" viewBox="0 0 24 24" stroke-width="1.5" stroke="currentColor">
                  <path stroke-linecap="round" stroke-linejoin="round" d="M19.5 14.25v-2.625a3.375 3.375 0 0 0-3.375-3.375h-1.5A1.125 1.125 0 0 1 13.5 7.125v-1.5a3.375 3.375 0 0 0-3.375-3.375H8.25m0 12.75h7.5m-7.5 3H12M10.5 2.25H5.625c-.621 0-1.125.504-1.125 1.125v17.25c0 .621.504 1.125 1.125 1.125h12.75c.621 0 1.125-.504 1.125-1.125V11.25a9 9 0 0 0-9-9Z" />
                </svg>
              </div>
            </div>
            <div>
              <h3 class="text-lg font-semibold text-gray-900">An-/Abmeldung / Kennzeichen</h3>
              <p class="mt-2 text-gray-600">
